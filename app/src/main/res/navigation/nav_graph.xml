<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">
    <fragment
        android:id="@+id/definitionFragment"
        tools:layout="@layout/fragment_definition"
        android:name="com.sonees.chakmadictionary.ui.DefinationFragment"
        android:label="Search" >
        <argument
            android:name="word"
            app:argType="string"
            android:defaultValue='""' />
        <argument
            android:name="wordId"
            app:argType="long"
            android:defaultValue="-1L" />
        <argument
            android:name="from"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.sonees.chakmadictionary.ui.history.HistoryFragment"
        tools:layout="@layout/fragment_history"
        android:label="History" >
        <action
            android:id="@+id/action_historyFragment_to_definitionFragment"
            app:destination="@id/definitionFragment"
            app:popUpTo="@id/definitionFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookmarkFragment"
        tools:layout="@layout/fragment_bookmark"
        android:name="com.sonees.chakmadictionary.ui.bookmark.BookmarkFragment"
        android:label="Bookmarks" >
        <action
            android:id="@+id/action_bookmarkFragment_to_definitionFragment"
            app:destination="@id/definitionFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.sonees.chakmadictionary.ui.welcome.WelcomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_definitionFragment"
            app:destination="@id/definitionFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_suggestActivity"
            app:destination="@id/suggestActivity" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.sonees.chakmadictionary.ui.about.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_aboutFragment_to_definitionFragment"
            app:destination="@id/definitionFragment" />
    </fragment>
    <fragment
        android:id="@+id/mySettingsFragment"
        android:name="com.sonees.chakmadictionary.ui.settings.MySettingsFragment"
        android:label="Settings" >
        <action
            android:id="@+id/action_mySettingsFragment_to_definitionFragment"
            app:destination="@id/definitionFragment"
            app:popUpTo="@id/welcomeFragment" />
    </fragment>
    <activity
        android:id="@+id/suggestActivity"
        android:name="com.sonees.chakmadictionary.ui.welcome.SuggestActivity"
        android:label="activity_suggest"
        tools:layout="@layout/activity_suggest" />
</navigation>