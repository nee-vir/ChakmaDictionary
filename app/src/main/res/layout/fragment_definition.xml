<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="definitionViewModel"
            type="com.sonees.chakmadictionary.ui.DefinitionViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/adViewD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/definationLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                tools:context=".ui.DefinationFragment">


                <CheckBox
                    android:id="@+id/bookmarkCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:button="@drawable/bookmark_selector"
                    android:onClick="@{()->definitionViewModel.onBookmark(definitionViewModel.myWord.wordId,definitionViewModel.myWord.word)}"
                    app:checkboxState="@{definitionViewModel.bookMarkState}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:wordNotFoundVisibility="@{definitionViewModel.wordNotFound}"
                    tools:text="Bookmark Word"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/wordText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="24dp"
                    android:text="@{definitionViewModel.myWord.word}"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/bookmarkCheckbox"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:wordNotFoundVisibility="@{definitionViewModel.wordNotFound}"
                    tools:text="Sobdo"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/englishLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/english_label"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/wordText"
                    app:wordNotFoundVisibility="@{definitionViewModel.wordNotFound}"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/translationText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:text="@{definitionViewModel.myWord.translation}"
                    android:textSize="25sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/englishLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/englishLabel"
                    app:wordNotFoundVisibility="@{definitionViewModel.wordNotFound}"
                    tools:text="Word"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/definitionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/definition_label_string"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/englishLabel"
                    app:wordNotFoundVisibility="@{definitionViewModel.wordNotFound}"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/definitionText"
                    definitionFormat="@{definitionViewModel.myWord.definition}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/definitionLabel"
                    app:wordNotFoundVisibility="@{definitionViewModel.wordNotFound}"
                    tools:text="I am good at thiss I am good at thissI am good at thissI am good at thissI am good at thissI am good at thissI am good at thissI am good at thissI am good at thissI am good at thissI am good at thissI am good at thiss"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/englishExampleLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/example_in_english_string"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/definitionText"
                    app:wordNotFoundVisibility="@{definitionViewModel.wordNotFound}"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/englishExampleText"
                    definitionFormat="@{definitionViewModel.myWord.example}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:textStyle="italic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/englishExampleLabel"
                    app:wordNotFoundVisibility="@{definitionViewModel.wordNotFound}"
                    tools:text="This is an example to demonstrate the usage of the word and I hope you find this word useful"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/chakmaExampleLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/example_in_chakma_string"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/englishExampleText"
                    app:wordNotFoundVisibility="@{definitionViewModel.wordNotFound}"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/chakmaExampleText"
                    definitionFormat="@{definitionViewModel.myWord.example2}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:textStyle="italic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chakmaExampleLabel"
                    app:wordNotFoundVisibility="@{definitionViewModel.wordNotFound}"
                    tools:text="This is an example to demonstrate the usage of the word and I hope you find this word useful"
                    tools:visibility="visible" />


                <ImageView
                    android:id="@+id/wordNotFoundImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.274"
                    app:srcCompat="@drawable/word_not_found"
                    app:wordNotFoundViewVisibility="@{definitionViewModel.wordNotFound}"
                    tools:visibility="gone" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/synonymsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/synonyms_text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chakmaExampleText"
                    app:visibilityIfEmpty="@{definitionViewModel.myWord.synonyms}"
                    app:wordNotFoundVisibility="@{definitionViewModel.wordNotFound}" />

                <TextView
                    android:id="@+id/synonymsText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:text="@{definitionViewModel.myWord.synonyms}"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/synonymsLabel"
                    app:visibilityIfEmpty="@{definitionViewModel.myWord.synonyms}"
                    app:wordNotFoundVisibility="@{definitionViewModel.wordNotFound}"

                    tools:text="Haha, lol, ehehehe" />


                <TextView
                    android:id="@+id/imageExampleLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/images_label"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/synonymsText"
                    app:visibilityIfEmpty="@{definitionViewModel.myWord.imageUrl}"
                    app:wordNotFoundVisibility="@{definitionViewModel.wordNotFound}" />

                <ImageView
                    android:id="@+id/imageExample"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/images_of_items_corresponding_to_the_word"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageExampleLabel"
                    app:setExampleImage="@{definitionViewModel.myWord.imageUrl}"
                    app:visibilityIfEmpty="@{definitionViewModel.myWord.imageUrl}"
                    app:wordNotFoundVisibility="@{definitionViewModel.wordNotFound}"
                    tools:srcCompat="@raw/apple_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id_2"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>